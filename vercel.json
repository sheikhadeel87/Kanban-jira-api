{
    "version": 2,
    "routes": [
      {
        "src": "/",
        "dest": "/api/index.js"
      },
        {
        "src": "/api/(.*)",
        "dest": "/api/index.js"                                     
      },
      {
        "src": "/uploads/(.*)",
        "dest": "/api/index.js"
      }
    ],
    "functions": {
      "api/index.js": {
        "memory": 1024,
        "maxDuration": 30
      }
    },
    "env": {
      "NODE_ENV": "production"
    }
  }